<%- include('../../partials/head' , { title: 'Edit User' }) %>
    <%- include('../../partials/sidebar') %>
        <%- include('../../partials/header') %>

            <main class="content">
                <div class="container-fluid p-0">

                    <div class="row align-items-center mb-3">
                        <div class="col-6">
                            <div class="h2">
                                Edit User
                            </div>
                        </div>
                    </div>
                    <div class="row">
                      <div class="col-12 col-lg-3 col-md-3">
                        <div class="mt-4">

                          <div class="mb-3 preview-image-box d-none">
                            <p class="text-center text-danger">Image Preview (Not uploaded yet)</p>
                            <img class="preview-image" style="width: 100%;" src="" alt="">

                          </div>

                          
                          <div>
                            <img class="user-image" style="width: 100%;" src="/users/<%= user.image %>" alt="">
                            <p class="mt-3"><span class="bold">Blog Count: </span><%=  user.posts.length %></p>
                          </div>
                       
                        </div>
                      </div>
                        <div class="col-12 col-lg-9 col-md-9">
                          <form action="/admin/user/update" method="POST" enctype="multipart/form-data">

                            <input type="hidden" name="id" value="<%= user.id %>">

                            <div class="mb-3">
                                <label for="image-input" class="form-label">Profile Image:</label>
                                <input type="file" id="image-input" name="image" class="form-control">
                              </div>
    
                            <div class="mb-3">
                              <label for="name" class="form-label">Name:</label>
                              <input type="text" id="name" name="name" class="form-control" required value="<%= user.name %>">
                            </div>
                    
                            <div class="mb-3">
                              <label for="email" class="form-label">Email:</label>
                              <input type="text" id="email" name="email" class="form-control" required value="<%= user.email %>">
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">Password:</label>
                                <input type="text" id="password" name="password" class="form-control">
                              </div>
                    
                            <div class="mb-3">
                                <label for="about" class="form-label">About:</label>
                                <textarea class="form-control" name="about" id="" cols="30" rows="10"><%= user.about %></textarea>
                            </div>
                    
                              <div class="mt-3 text-end">
                                <button type="submit" class="btn btn-primary">Update</button>
                              </div>
                            
                          </form>
                        </div>


                    </div>
                
                      
                </div>
            </main>

<%- include('../../partials/footer') %>